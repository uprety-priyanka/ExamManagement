@inherits DeleteFacultyDialogBase

<MudDialog DisableSidePadding="true">
    <DialogContent>
            <MudContainer>
                <MudText>Faculty Name: @info.FacultyName</MudText>
                <MudText>Created Date: @info.CreatedDate.ToDateTime().AddHours(5).AddMinutes(45).ToString("ddd, dd MMM yyy")</MudText>
                <MudCardActions>
                    <MudSpacer />
                    <MudButton Style="margin-right:4px;" ButtonType="ButtonType.Reset" OnClick="()=>MudDialog.Cancel()" Variant="Variant.Filled" Color="Color.Dark">Cancel</MudButton>
                    <MudButton ButtonType="ButtonType.Submit" Disabled="DeleteButton" OnClick="DeleteFaculty" Variant="Variant.Filled" Color="Color.Error">
                        @if (DeleteButton)
                        {
                            <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                            <MudText Class="ms-2">Deleting Record</MudText>
                        }
                        else
                        {
                            <MudText>Delete Record</MudText>
                        }
                    </MudButton>
                </MudCardActions>

            </MudContainer>
    </DialogContent>
</MudDialog>
