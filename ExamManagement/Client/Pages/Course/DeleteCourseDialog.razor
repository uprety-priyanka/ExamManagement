@inherits DeleteCourseDialogBase

<MudDialog DisableSidePadding="true">
    <DialogContent>
            <MudContainer>
                <MudText>Course Code: @info.CourseCode</MudText>
                <MudText>Course Name: @info.CourseName</MudText>
                <MudText>Faculty Name: @info.FacultyName</MudText>
                <MudText>Semester: @info.SemesterName</MudText>
                <MudCardActions>
                    <MudSpacer />
                    <MudButton Style="margin-right:4px;" ButtonType="ButtonType.Reset" OnClick="()=>MudDialog.Cancel()" Variant="Variant.Filled" Color="Color.Dark">Cancel</MudButton>
                    <MudButton ButtonType="ButtonType.Submit" Disabled="DeleteButton" OnClick="DeleteCourse" Variant="Variant.Filled" Color="Color.Error">
                        @if (DeleteButton)
                        {
                            <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                            <MudText Class="ms-2">Deleting Course</MudText>
                        }
                        else
                        {
                            <MudText>Delete Course</MudText>
                        }
                    </MudButton>
                </MudCardActions>

            </MudContainer>
    </DialogContent>
</MudDialog>