@inherits DeleteStudentDialogBase

<MudDialog DisableSidePadding="true">
    <DialogContent>
            <MudContainer>
                <MudText>Deleting student will delete all its associated records.</MudText>
                <MudText>Last Name: @info.SurName</MudText>
                <MudText>First Name: @info.GivenName</MudText>
                <MudText>Email Address: @info.EmailAddress</MudText>
                <MudText>Registration Number: @info.RegistrationNumber</MudText>
                <MudText>Batch: @info.Batch</MudText>
                <MudCardActions>
                    <MudSpacer />
                    <MudButton Style="margin-right:4px;" ButtonType="ButtonType.Reset" OnClick="()=>MudDialog.Cancel()" Variant="Variant.Filled" Color="Color.Dark">Cancel</MudButton>
                    <MudButton ButtonType="ButtonType.Submit" Disabled="DeleteButton" OnClick="DeleteStudentAdmin" Variant="Variant.Filled" Color="Color.Error">
                        @if (DeleteButton)
                        {
                            <MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true" />
                            <MudText Class="ms-2">Deleting Student</MudText>
                        }
                        else
                        {
                            <MudText>Delete Student</MudText>
                        }
                    </MudButton>
                </MudCardActions>

            </MudContainer>
    </DialogContent>
</MudDialog>